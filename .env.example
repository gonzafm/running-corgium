STRAVA_CLIENT_ID=
STRAVA_CLIENT_SECRET=
STRAVA_REDIRECT_URI=http://localhost:8000/strava/authorize
ENVIRONMENT=dev

# JWT settings
JWT_SECRET=your-secret-here
JWT_LIFETIME_SECONDS=3600

# Storage backend: "standalone" or "dynamodb"
DB_BACKEND=standalone

# Database settings (standalone mode)
DB_HOST=127.0.0.1
DB_PORT=5432
DB_USER=user
DB_PASSWORD=password
DB_NAME=postgres

# DynamoDB settings (dynamodb mode)
# Omit DYNAMODB_ENDPOINT_URL for real AWS; set for local DynamoDB
# DYNAMODB_ENDPOINT_URL=http://localhost:9000
DYNAMODB_REGION=us-east-2
DYNAMODB_TABLE_NAME=activities
